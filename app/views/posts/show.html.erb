<h3><%= @post.title %></h3>
<p><%= markdown @post.content %></p>
<p><%= @post.created_at.strftime('%A, %B, %d')%></p>
<br>
<br>
<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>

<div>
	<h4>Share this blog post on Facebook!</h4>
	<!-- Facebook -->
    <a onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">Facebook Icon</a>
</div>
<%= render 'disqus' %>